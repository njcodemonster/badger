@{
    ViewData["Title"] = "PO Reporting";
}

<h4 class="text-center">Inventory Reporting</h4>
<h4>Select Criteria</h4>
<div style="min-height: 500px;">
    <div class="table-responsive" style="overflow-x:visible;">
        <table class="table porep">
            <tr>
                <td style="width: 20%">
                    <label>Type</label>
                    <select class="form-control">
                        <option selected>Clothing</option>
                        <option>Accessories</option>
                    </select>
                </td>
                <td style="width: 20%">
                    <label>Date Range</label>
                    <input type="text" class="form-control" id="poreporting">
                </td>
                <td style="width: 20%">
                    <label class="d-block">Size</label>
                    <select class="form-control custom-select" id="size" multiple="multiple">
                        <option value="size1">Size 1</option>
                        <option value="size2">Size 2</option>
                        <option value="size3">Size 3</option>
                        <option value="size4">Size 4</option>
                        <option value="size5">Size 5</option>
                        <option value="size6">Size 6</option>
                    </select>
                </td>
                <td style="width: 20%">
                    <label class="d-block">Vendor</label>
                    <select class="form-control custom-select" id="vendor" multiple="multiple">
                        <option value="vendor1">Vendor 1</option>
                        <option value="vendor2">Vendor 2</option>
                        <option value="vendor3">Vendor 3</option>
                        <option value="vendor4">Vendor 4</option>
                        <option value="vendor5">Vendor 5</option>
                        <option value="vendor6">Vendor 6</option>
                    </select>
                </td>
                <td style="width: 20%">
                    <label class="d-block">Status</label>
                    <select class="form-control custom-select" id="status" multiple="multiple">
                        <option value="status1">Status 1</option>
                        <option value="status2">Status 2</option>
                        <option value="status3">Status 3</option>
                        <option value="status4">Status 4</option>
                        <option value="status5">Status 5</option>
                        <option value="status6">Status 6</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="5">
                    <label class="h5 d-block">Perform Search</label>
                    <button type="button" class="btn btn-primary">SEARCH</button>
                </td>
            </tr>
        </table>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered">
            <tr>
                <th>

                </th>
                <th>
                    Clothing
                </th>
                <th>
                    XS
                </th>
                <th>
                    S
                </th>
                <th>
                    M
                </th>
                <th>
                    L
                </th>
            </tr>
            <tr>
                <td>
                    <b>Total Styles:</b>
                </td>
                <td>
                    90
                </td>
                <td>
                    40
                </td>
                <td>
                    60
                </td>
                <td>
                    50
                </td>
                <td>
                    10
                </td>
            </tr>
        </table>
    </div>

</div>