
@{
    ViewData["Title"] = "Purchase Orders";
}

@model dynamic
@section Scripts {
    <script src="~/js/common.js" asp-append-version="true"></script>
    <script src="~/js/vendorListingPage.js" asp-append-version="true"></script>    
    <script src="~/js/purchaseOrdersListingPage.js" asp-append-version="true"></script>
}

<div class="row">
    <div class="col-md-3 col-sm-12">
        <h4 class="text-info">Open Purchase Orders (@Model.PurchaseOrdersCount)</h4>
    </div>
    <div class="col-md-9">
        <button type="button" class="btn btn-success btn-sm model_purchase_order" data-toggle="modal" data-target="#modalPurchaseOrder">
            Add New P.O.
        </button>
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#newVendorModal">
            Add New Vendor
        </button>
    </div>
</div>
<div class="table-responsive pt-5">
    <table id="purchaseorderlists" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>P.O. Number</th>
                <th>Order Date</th>
                <th>Vendor</th>
                <th>Styles</th>
                <th>Photos</th>
                <th>Remaining</th>
                <th>Shipment Window</th>
                <th>Last Change</th>
                <th>Status</th>
                <th>Check-in</th>
                <th>Edit P.O.</th>
                <th></th>
                <th></th>
                <th>Inspect</th>
                <th>Go Live</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PurchaseOrdersInfo purchaseOrders in Model.PurchaseOrdersLists)
            {
                <tr>
                    <!-- td>@purchaseOrders.po_id</!--td>
                    <td>@purchaseOrders.vendor_invoice_number</td>
                    <td>@purchaseOrders.vendor_order_number</td-->

                    <td>@purchaseOrders.vendor_po_number</td>
                    <td>
                        @purchaseOrders.custom_order_date
                    </td>
                    <td>@purchaseOrders.vendor</td>
                    <td>@purchaseOrders.total_styles</td>
                    <td>5</td>
                    <td>3</td>
                    <td>@purchaseOrders.custom_delivery_window_start_end</td>
                    <td>@purchaseOrders.num_of_days</td>
                    <td>
                        @if (@purchaseOrders.po_status == 1)
                        {
                            <span>Open</span>
                        }

                        @if (@purchaseOrders.po_status == 3)
                        {
                            <span>In Process</span>
                        }
                    </td>
                    <td>
                        <button type="button" class="btn btn-success btn-sm" data-ID="@purchaseOrders.po_id" id="EditPurhaseOrderCheckedIn">Checked-in</button>
                    </td>
                    <td>
                        <button type="button" id="EditPurhaseOrder" data-ID="@purchaseOrders.po_id" class="btn btn-light btn-sm">Edit</button>
                    </td>
                    <td>
                        <a href="javascript:void(0)" data-ID="@purchaseOrders.po_id" id="EditPurhaseOrderNote"><i class="fa fa-edit h3"></i></a>
                    </td>
                    <td>
                        <a href="javascript:void(0)" data-ID="@purchaseOrders.po_id" id="EditPurhaseOrderDocument"><i class="fa fa-upload h3"></i></a>
                    </td>
                    <td>
                        <a href="javascript:void(0)">Claim</a>
                    </td>
                    <td>
                        <a href="javascript:void(0)">Claim</a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>P.O. Number</th>
                <th>Order Date</th>
                <th>Vendor</th>
                <th>Styles</th>
                <th>Photos</th>
                <th>Remaining</th>
                <th>Shipment Window</th>
                <th>Last Change</th>
                <th>Status</th>
                <th>Check-in</th>
                <th>Edit P.O.</th>
                <th></th>
                <th></th>
                <th>Inspect</th>
                <th>Go Live</th>
            </tr>
        </tfoot>
    </table>

</div>


