@{
    ViewData["Title"] = "Vendor";
}

@model dynamic

@section Scripts {
    <script src="~/js/common.js" asp-append-version="true"></script>
    <script src="~/js/vendorListingPage.js" asp-append-version="true"></script>
}

<div class="row">
    <div class="col-md-2 col-sm-12">
        <h4 class="text-info">Vendors (@Model.VendorCount)</h4>
    </div>
    <div class="col-md-10">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" id="AddNewVendorButton" data-target="#newVendorModal">
            Add New Vendor
        </button>
    </div>
</div>
<div class="table-responsive pt-5">
    <table id="vendorListingArea" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Vendor Name</th>
                <th>Vendor Code</th>
                <th>Orders Count</th>
                <th>Most Recent Order</th>
                <th>Edit Profile</th>
                <th>Vendor Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (VendorInfo vendor in Model.VendorLists)
            {
                <tr>
                    <td class="vendorName">@vendor.vendor_name</td>
                    <td>@vendor.vendor_code</td>
                    <td>@vendor.order_count</td>
                    <td><a href="#" data-toggle="modal" data-target="#modalpo1">@vendor.last_order</a></td>
                    <td>
                        <button type="button" id="EditVendor" data-ID="@vendor.vendor_id" class="btn btn-light btn-sm">Edit</button>
                    </td>
                    <td>
                        <a href="#" data-toggle="modal" data-ID="@vendor.vendor_id" id="VendorNoteButton" data-target="#modaladdnote"><i class="fa fa-edit h3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Vendor Name</th>
                <th>Vendor Code</th>
                <th>Orders Count</th>
                <th>Most Recent Order</th>
                <th>Edit Profile</th>
                <th>Vendor Notes</th>
            </tr>
        </tfoot>
    </table>
</div>

@section page_popup_area{

    <!-- Modal Vendor -->
    <div class="modal fade" id="newVendorModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="vendorModalLongTitle">Add a New Vendor Profile</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <form id="newVendorForm" data-currentid="" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Vendor Name</label>
                                    <input type="text" class="form-control" id="vendorName">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Corporation Name</label>
                                    <input type="text" class="form-control" id="vendorCorpName">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Exact Statement Name</label>
                                    <input type="text" class="form-control" id="vendorStatmentName">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Vendor Code</label>
                                    <input type="text" class="form-control" id="vendorCode">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Our Customer #</label>
                                    <input type="text" class="form-control" id="vendorourCustomerNumber">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Street Address</label>
                                    <input type="text" class="form-control" id="vendorStreetAdress">
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="form-group col-md-3">
                                    <label>Zip Code</label>
                                    <input type="text" maxlength="5" data-type="number" class="form-control" id="vendorZip">
                                </div>
                                <div class="form-group col-md-3">
                                    <label>State</label>
                                    <input type="text" class="form-control" id="vendorState">
                                </div>
                                <div class="form-group col-md-3">
                                    <label>Unit Number</label>
                                    <input type="text" class="form-control" id="vendorUnitNumber">
                                </div>
                                <div class="form-group col-md-3">
                                    <label>City</label>
                                    <input type="text" class="form-control" id="vendorCity">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Vendor Notes</label>
                                    <textarea class="form-control" id="vendorNotes"></textarea>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Upload Logo</label>
                                    <input type="file" class="form-control" id="vendorDocument" multiple>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Vendor Description</label>
                                    <textarea class="form-control" id="vendorDec"></textarea>
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Vendor Types</label>
                                    <select id="vendortype" class="form-control d-inline-block" style="width: 90%">
                                        <option value="">choose ...</option>

                                        @foreach (VendorType vendorType in Model.VendorType)
                                        {
                                        <option value="@vendorType.vendor_type_id">@vendorType.vendor_type_description</option>
                                        }

                                    </select>
                                </div>
                            </div>
                            <div class="venderRepo">
                                <div class="venderRepoBox highlighted">
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Rep First Name</label>
                                            <input type="text" class="form-control" id="vendorRepName" style="width:90%"><input type="radio" id="vendorRepIsPrimary" checked name="vendorRepIsPrimary" /> <small>Primary</small>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Rep Full Name</label>
                                            <span class="firstRep">
                                                <input type="text" class="form-control" id="vendorFullRepName" style="width:90%">
                                            </span>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Phone Number 1</label>
                                            <div class="row">
                                                <div class="col-md-3 p-0">
                                                    <span class="d-inline">(</span> <input maxlength="3" data-type="number" type="tel" class="phone form-control d-inline w-75" id="vendorRepPhone11"> <span class="d-inline">)</span>
                                                </div>
                                                <div class="col-md-3 p-0">
                                                    <input type="tel" class="form-control phone" maxlength="3" data-type="number" id="vendorRepPhone12">
                                                </div>

                                                <div class="col-md-5">
                                                    <input type="tel" class="form-control phone" maxlength="4" data-type="number" id="vendorRepPhone13">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-md-6">
                                            <label>Email</label>
                                            <input type="email" class="form-control email" style="width:90%" id="vendorRepEmail">
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="form-group col-md-6">
                                            <label>Phone Number 2</label>
                                            <div class="row">
                                                <div class="col-md-3 p-0">
                                                    <span class="d-inline">(</span> <input maxlength="3" data-type="number" type="tel" class="form-control d-inline w-75 phone" id="vendorRepPhone14"> <span class="d-inline">)</span>
                                                </div>
                                                <div class="col-md-3 p-0">
                                                    <input type="tel" class="form-control phone" maxlength="3" data-type="number" id="vendorRepPhone15">
                                                </div>

                                                <div class="col-md-5">
                                                    <input type="tel" class="form-control phone" maxlength="4" data-type="number" id="vendorRepPhone16">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <a href="#" id="AddMoreReps" class="" style="text-decoration:underline">+ add rep</a>

                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="vendorAlertMsg"></div>
                    <button type="button" class="btn btn-primary" id="NewVendorButton">Add</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Add Note -->
    <div class="modal fade" id="modaladdnote" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="noteModalLongTitle">Notes Information</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <form id="note_form" data-noteid="">
                            <div class="form-row">
                                <div class="form-group col-md-12">
                                    <label>Note</label>
                                    <textarea type="text" class="form-control" id="vendorNote" name="vendorNote"></textarea>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="addVendorNote" style="margin: 0 auto;">Submit</button>
                </div>
            </div>
        </div>
    </div>

}
