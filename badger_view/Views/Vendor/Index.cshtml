@{
    ViewData["Title"] = "Vendor";
}

@model dynamic

@section Scripts {
    <script src="~/js/vendorListingPage.js" asp-append-version="true"></script>
}

<div class="row">
    <div class="col-md-2 col-sm-12">
        <h4 class="text-info">Vendors (@Model.VendorCount)</h4>
    </div>
    <div class="col-md-10">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" id="AddNewVendorButton" data-target="#modalvendor">
            Add New Vendor
        </button>
    </div>
</div>
<div class="table-responsive pt-5">
    <table id="openpo" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Vendor Name</th>
                <th>Vendor Code</th>
                <th>Orders Count</th>
                <th>Most Recent Order</th>
                <th>Edit Profile</th>
                <th>Vendor Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (VendorInfo vendor in Model.VendorLists)
            {
                <tr>
                    <td>@vendor.vendor_name</td>
                    <td>@vendor.vendor_code</td>
                    <td>@vendor.order_count</td>
                    <td><a href="#" data-toggle="modal" data-target="#modalpo1">@vendor.last_order</a></td>
                    <td>
                        <button type="button" id="EditVendor" data-ID="@vendor.vendor_id" class="btn btn-light btn-sm">Edit</button>
                    </td>
                    <td>
                        <a href="#"><i class="fa fa-edit h3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Vendor Name</th>
                <th>Vendor Code</th>
                <th>Orders Count</th>
                <th>Most Recent Order</th>
                <th>Edit Profile</th>
                <th>Vendor Notes</th>
            </tr>
        </tfoot>
    </table>
</div>

@section page_popup_area{

    <!-- Modal Vendor -->
    <div class="modal fade" id="modalvendor" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="vendorModalLongTitle">Add a New Vendor Profile</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container">
                        <form id="newVendorForm" data-currentid="" enctype="multipart/form-data">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Vendor Name</label>
                                    <input type="text" class="form-control" id="vendorName">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Corporation Name</label>
                                    <input type="text" class="form-control" id="vendorCorpName">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Exact Statement Name</label>
                                    <input type="text" class="form-control" id="vendorStatmentName">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Vendor Code</label>
                                    <input type="text" class="form-control" id="vendorCode">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Our Customer #</label>
                                    <input type="text" class="form-control" id="vendorourCustomerNumber">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>Street Address</label>
                                    <input type="text" class="form-control" id="vendorStreetAdress">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Unit Number</label>
                                    <input type="text" class="form-control" id="vendorUnitNumber">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>City</label>
                                    <input type="text" class="form-control" id="vendorCity">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Zip Code</label>
                                    <input type="text" class="form-control" id="vendorZip">
                                </div>
                                <div class="form-group col-md-6">
                                    <label>State</label>
                                    <input type="text" class="form-control" id="vendorState">
                                </div>
                            </div>
                                <div class="venderRepo">
                                    <div class="venderRepoBox" style="border:none">
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label>Rep First Name</label>
                                                <input type="text" class="form-control" id="vendorRepName" style="width:90%"><input type="radio" id="vendorRepIsPrimary" name="vendorRepIsPrimary" /> <small>Primary</small>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>Rep Full Name</label>
                                                <span class="firstRep">
                                                    <input type="text" class="form-control" id="vendorFullRepName" style="width:90%">
                                                </span>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label>Phone Number 1</label>
                                                <div class="row">
                                                    <div class="col-md-3 p-0">
                                                        <span class="d-inline">(</span> <input maxlength="3" type="tel" class="form-control d-inline w-75" id="vendorRepPhone11"> <span class="d-inline">)</span>
                                                    </div>
                                                    <div class="col-md-3 p-0">
                                                        <input type="tel" class="form-control" maxlength="3" id="vendorRepPhone12">
                                                    </div>

                                                    <div class="col-md-5">
                                                        <input type="tel" class="form-control" maxlength="4" id="vendorRepPhone13">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group col-md-6">
                                                <label>Email</label>
                                                <input type="email" class="form-control" style="width:90%" id="vendorRepEmail">
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label>Phone Number 2</label>
                                                <div class="row">
                                                    <div class="col-md-3 p-0">
                                                        <span class="d-inline">(</span> <input maxlength="3" type="tel" class="form-control d-inline w-75" id="vendorRepPhone14"> <span class="d-inline">)</span>
                                                    </div>
                                                    <div class="col-md-3 p-0">
                                                        <input type="tel" class="form-control" maxlength="3" id="vendorRepPhone15">
                                                    </div>

                                                    <div class="col-md-5">
                                                        <input type="tel" class="form-control" maxlength="4" id="vendorRepPhone16">
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <a href="#" id="AddMoreReps" class="" style="text-decoration:underline">Add More Repo</a>
                                <div class="form-row">
                                    <div class="form-group col-md-6">
                                        <label>Vendor Notes</label>
                                        <textarea class="form-control" id="vendorNotes"></textarea>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Upload</label>
                                        <input type="file" class="form-control" id="vendorDocument" multiple>
                                    </div>
                                </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="NewVendorButton">Add</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

}
