

@{
    ViewData["Title"] = "Vendor";
}
@model dynamic

<div class="row">
    <div class="col-md-2 col-sm-12">
        <h4 class="text-info">Vendors (@Model.VendorCount)</h4>
    </div>
    <div class="col-md-10">
        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalvendor">
            Add New Vendor
        </button>
    </div>
</div>
<div class="table-responsive pt-5">
    <table id="openpo" class="table table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Vendor Name</th>
                <th>Vendor Code</th>
                <th>Orders Count</th>
                <th>Most Recent Order</th>
                <th>Edit Profile</th>
                <th>Vendor Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (VendorInfo vendor in Model.VendorLists)
            {
                <tr>
                    <td>@vendor.vendor_name</td>
                    <td>@vendor.vendor_code</td>
                    <td>@vendor.order_count</td>
                    <td><a href="#" data-toggle="modal" data-target="#modalpo1">@vendor.last_order</a></td>
                    <td>
                        <button type="button" class="btn btn-light btn-sm">Edit</button>
                    </td>
                    <td>
                        <a href="#"><i class="fa fa-edit h3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Vendor Name</th>
                <th>Vendor Code</th>
                <th>Orders Count</th>
                <th>Most Recent Order</th>
                <th>Edit Profile</th>
                <th>Vendor Notes</th>
            </tr>
        </tfoot>
    </table>
</div>